extends layout

block content
	.container-fluid
		.row.text-center
			br
			h1 SURVEY
			br
	.container
		.row
			.panel.panel-default
				.panel-body
					table.table.table-hover
						thead
							tr
								th Questions
								th Answers
						- var totalQuestions = questions.length;
						tbody(id='survey', total-questions= totalQuestions)
							- for (var i in questions) {
								- var groupId = 'resGroup' + i;
								tr
									td.questions(width='60%')= questions[i]
									td.answers(width='20%')
										.btn-group.btn-group-justified.response(role='group', data-toggle='buttons', id= groupId)
											label.btn.btn-default
												input(type='radio', name='rating', value='1')
												|  1
											label.btn.btn-default
												input(type='radio', name='rating', value='2')
												|  2
											label.btn.btn-default
												input(type='radio', name='rating', value='3')
												|  3
											label.btn.btn-default
												input(type='radio', name='rating', value='4')
												|  4
											label.btn.btn-default
												input(type='radio', name='rating', value='5')
												|  5
							- }
					hr
					.row.text-center
						#survey-error Please provide an answer for all questions before submitting survey.
						#submit-btn.button.btn.btn-danger.btn-lg(type='button') SUBMIT 
							span.glyphicon.glyphicon-send
	
	append scripts
		script(src='/js/survey.js')
